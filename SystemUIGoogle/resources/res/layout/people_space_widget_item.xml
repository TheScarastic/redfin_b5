<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@android:id/background" android:background="@drawable/people_space_tile_view_card" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:elevation="4dp" android:clipToOutline="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp">
            <ImageView android:id="@+id/person_icon" android:layout_width="60dp" android:layout_height="60dp"/>
            <LinearLayout android:background="@drawable/people_space_rounded_border" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="28dp" android:layout_marginBottom="14dp" android:layout_marginStart="-12dp">
                <ImageView android:id="@+id/package_icon" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="12dp">
                <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Time" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary" android:ellipsize="end" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Time" android:textSize="12sp" android:textColor="?android:attr/textColorSecondary" android:ellipsize="end" android:id="@+id/status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="3" android:paddingVertical="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
