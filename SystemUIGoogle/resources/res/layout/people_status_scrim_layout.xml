<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scrim_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/status_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">
        <ImageView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.2"/>
        <ImageView android:background="@drawable/people_tile_status_scrim" android:layout_width="match_parent" android:layout_height="0dp" android:scaleType="centerCrop" android:layout_weight="0.8"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">
        <ImageView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.66"/>
        <ImageView android:background="@drawable/people_tile_status_scrim" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.33"/>
    </LinearLayout>
</RelativeLayout>
